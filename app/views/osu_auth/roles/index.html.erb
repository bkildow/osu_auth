<ul class="nav nav-tabs" role="tablist">
  <li role="presentation"><a href="<%= users_path %>">Users</a></li>
  <li role="presentation" class="active"><a href="#">Roles</a></li>
</ul>

<h1>Roles</h1>

<% if notice.present? %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<%= create_role_link %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td>
          <%= edit_role_link(role) %>
          <%= delete_role_link(role) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
