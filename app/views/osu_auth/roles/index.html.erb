<ul class="nav nav-tabs" role="tablist">
  <li role="presentation"><a href="<%= users_path %>">Users</a></li>
  <li role="presentation" class="active"><a href="#">Roles</a></li>
</ul>

<h1>Roles</h1>

<% if notice.present? %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<%= link_to new_role_path, class: 'btn btn-primary', role: 'button' do %>
  <span class="glyphicon glyphicon-plus"></span> New Role
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td>
          <%= link_to 'Edit', edit_role_path(role) %>  |
          <%= link_to 'Delete', role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
