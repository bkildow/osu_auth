<ul class="nav nav-tabs" role="tablist">
  <li role="presentation"><a href="<%= users_path %>">Users</a></li>
  <li role="presentation" class="active"><a href="#">Roles</a></li>
</ul>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Delete', role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path %>
